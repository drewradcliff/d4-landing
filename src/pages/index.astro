---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import zap from "../assets/icons/zap.svg";
import inbox from "../assets/icons/inbox.svg";
import arrowRight from "../assets/icons/arrow-right.svg";
---

<Layout>
  <div class="min-h-screen font-mono">
    <!-- Header -->
    <header class="container mx-auto py-6 px-4">
      <div class="flex justify-between items-center">
				<div class="flex items-center gap-2">
					<div class="bg-black text-white font-bold text-xl p-2 rotate-1 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
						QUADZILLA	
					</div>
				</div>
				<nav class="hidden md:flex gap-6">
					<a href="#features" class="font-medium hover:underline underline-offset-4">Features</a>
					<a href="#how-it-works" class="font-medium hover:underline underline-offset-4">How it works</a>
					<a href="#contact" class="font-medium hover:underline underline-offset-4">Contact</a>
				</nav>
			</div>
		 </header>
		 
		 <!-- Hero -->
		<section class="container mx-auto py-12 px-4 md:py-24">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div class="space-y-6">
					<h1 class="text-4xl md:text-6xl font-bold leading-tight">
						Prioritize Tasks Like Eisenhower
					</h1>
					<p class="text-xl">
						Stop drowning in to-dos. Start focusing on what truly matters with the proven Eisenhower Matrix method.
					</p>
					<div class="flex flex-col sm:flex-row gap-4 pt-4">
						<a
							href="/"
							class="px-6 py-3 border-2 border-black bg-[#FFD700] font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-x-[2px] hover:translate-y-[2px] transition-all text-center"
						>
							Get Started
						</a>
						<a
							href="#how-it-works"
							class="px-6 py-3 border-2 border-black bg-white font-bold shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-x-[2px] hover:translate-y-[2px] transition-all text-center"
						>
							See How It Works
						</a>
					</div>
				</div>
				<div class="relative flex justify-center py-12">
					<div class="flex-1 max-w-96 relative">
						<div class="border-2 border-black p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] rotate-1">
							<div class="text-xl font-bold mb-4">Prioritize</div>
							<div id="blog-post-card" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-white border-2 border-black px-5 pt-5 pb-16 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] z-10 transition-all duration-1000 delay-500">
								<div class="font-bold">Write a blog <br/> post</div>
							</div>
							<div class="grid grid-cols-2 p-4">
								<div class="relative border-r border-b border-dashed h-32 text-center">
									<div class="text-sm absolute transform -rotate-90 -left-15 top-10 text-[#B8B8B8]">Important</div>
									<div class="text-sm text-[#B8B8B8] absolute left-10 -top-5">Urgent</div>
								</div>
								<div class="border-b border-dashed h-32 text-center relative">
									<div class="text-sm text-[#B8B8B8] absolute left-10 -top-5">Not Urgent</div>
								</div>
								<div class="relative border-r border-dashed h-32 text-center">
									<div class="text-sm absolute top-15 -left-19 text-[#B8B8B8] transform -rotate-90">Not Important</div>
								</div>
								<div class="absolute -bottom-4 -right-4 bg-[#FF6B6B] border-2 border-black p-2 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-3">
									<div class="font-bold">Drag & Drop</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Features -->
		<section id="features" class="bg-[#FFD700] py-16 border-y-2 border-black">
			<div class="container mx-auto px-4">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-bold inline-block bg-white px-4 py-2 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rotate-1">
						Powerful Features
					</h2>
				</div>
				<div class="grid md:grid-cols-3 gap-8">
					<div class="bg-white p-6 border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] rotate-1">
						<div class="bg-[#FFD700] inline-block p-2 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-3 mb-4">
							<img src={inbox.src} class="w-6 h-6" />
						</div>
						<h3 class="text-xl font-bold mb-2">Inbox</h3>
						<p>Create, edit and delete tasks.</p>
					</div>
					<div class="bg-white p-6 border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] -rotate-1">
						<div class="bg-[#4ECDC4] inline-block p-2 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rotate-3 mb-4">
							<img src={zap.src} class="w-6 h-6" />
						</div>
						<h3 class="text-xl font-bold mb-2">Prioritize</h3>
						<p>Prioritize tasks based on urgency and importance to focus on what truly matters.</p>
					</div>
					<div class="bg-white p-6 border-2 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] rotate-2">
						<div class="bg-[#FF6B6B] inline-block p-2 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-3 mb-4">
							<img src={arrowRight.src} class="w-6 h-6" />
						</div>
						<h3 class="text-xl font-bold mb-2">Drag animations</h3>
						<p>Enjoy satisfying drag-and-drop animations that make organizing your tasks a delightful experience.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- How it works -->
		 <section id="how-it-works" class="py-16 container mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl md:text-4xl font-bold inline-block bg-white px-4 py-2 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-1">
					The Eisenhower Method
				</h2>
				<p class="mt-4 max-w-2xl mx-auto text-lg">
					Learn how to prioritize tasks using the Eisenhower Matrix method.
				</p>
			</div>
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div class="bg-white border-2 border-black p-6 shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] rotate-1">
					<div class="grid grid-cols-2 gap-4">
						<div class="bg-[#DFFFD5] border-2 border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
							<div class="font-bold">1. Do</div>
							<div class="mt-2">Urgent & Important</div>
							<div class="mt-1 text-sm">Tasks that need immediate attention</div>
						</div>
						<div class="bg-[#FDFFDA] border-2 border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
							<div class="font-bold">2. Decide</div>
							<div class="mt-2">Important, Not Urgent</div>
							<div class="mt-1 text-sm">Tasks to schedule for later</div>
						</div>
						<div class="bg-[#CCE5FF] border-2 border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
							<div class="font-bold">3. Delegate</div>
							<div class="mt-2">Urgent, Not Important</div>
							<div class="mt-1 text-sm">Tasks to assign to others</div>
						</div>
						<div class="bg-[#FFCECC] border-2 border-black p-4 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
							<div class="font-bold">4. Delete</div>
							<div class="mt-2">Not Urgent or Important</div>
							<div class="mt-1 text-sm">Tasks to remove from your list</div>
						</div>
					</div>
				</div>
				<div class="space-y-6">
					<div class="bg-white p-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] -rotate-1">
						<h3 class="text-xl font-bold">Why It Works</h3>
						<p class="mt-2">
							The Eisenhower Matrix forces you to evaluate each task based on two critical factors: urgency and
							importance. This simple yet powerful framework helps you make better decisions about where to focus your
							time and energy.
						</p>
					</div>
					<div class="bg-white p-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] rotate-1">
						<h3 class="text-xl font-bold">How QUADZILLA Enhances It</h3>
						<p class="mt-2">
							Our app brings the Eisenhower Matrix to life with intuitive drag-and-drop functionality and visual cues to help you categorize your tasks effectively.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA -->
		 <section class="bg-[#4ECDC4] py-16 border-y-2 border-black">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-center mb-4">Ready to Prioritize?</h2>
				<p class="text-lg text-center mb-8">Get started with QUADZILLA today and transform your productivity.</p>
				<a href="/" class="inline-block px-8 py-4 border-2 border-black bg-[#FFD700] font-bold text-lg shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-x-[4px] hover:translate-y-[4px] transition-all">
					Get Started
				</a>
			</div>
		 </section>

		 <!-- Footer -->
		 <footer class="bg-[#FFFAF0] py-12 border-t-2 border-black">
			<div class="container mx-auto px-4">
				<div class="grid md:grid-cols-4 gap-8">
					<div>
						<div class="bg-black text-white font-bold text-xl p-2 inline-block rotate-1 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] mb-4">
							QUADZILLA
						</div>
						<p>
							Prioritize like Eisenhower.
						</p>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Product</h3>
						<ul class="space-y-2">
							<li>
								<a href="#features" class="hover:underline">
									Features
								</a>
							</li>
							<li>
								<a href="#how-it-works" class="hover:underline">
									How it works
								</a>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Resources</h3>
						<ul class="space-y-2">
							<li>
								<a href="#" class="hover:underline">
									Blog
								</a>
							</li>
							<li>
								<a href="#" class="hover:underline">
									Support
								</a>
							</li>
						</ul>
					</div>
					<div>
						<h3 class="font-bold text-lg mb-4">Company</h3>
						<ul class="space-y-2">
							<li>
								<a href="#" class="hover:underline">
									Contact
								</a>
							</li>
						</ul>
					</div>
				</div>
				<div class="border-t-2 border-black mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
					<p>Â© {new Date().getFullYear()} QUADZILLA. All rights reserved.</p>
					<div class="flex gap-4 mt-4 md:mt-0">
						<a href="#" class="hover:underline">
							Terms
						</a>
						<a href="#" class="hover:underline">
							Privacy
						</a>
						<a href="#" class="hover:underline">
							Cookies
						</a>
					</div>
				</div>
			</div>
		</footer>
	</div>
</Layout>

<script>
  const blogPostCard = document.getElementById('blog-post-card')!;
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        // Move card to top-left quadrant and change background color
        blogPostCard.style.transform = 'translate(-50%, -50%)';
        blogPostCard.style.backgroundColor = '#DFFFD5';
      } else {
        // Reset position and color when out of view
        blogPostCard.style.transform = 'translate(0%, 0%)';
        blogPostCard.style.backgroundColor = 'white';
      }
    });
  }, {
    threshold: 0.5,
    rootMargin: '0px'
  });

  if (blogPostCard) {
    observer.observe(blogPostCard);
  }
</script>
